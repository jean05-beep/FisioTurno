<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FisioTurno.Views.ListaFisioterapeutasPage"
             Title="Fisioterapeutas Registrados"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Fisioterapeutas Registrados"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#1E293B"/>

            <CollectionView x:Name="ListaFisio"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <Border StrokeShape="RoundRectangle 15"
                                BackgroundColor="#F1F5F9"
                                Padding="15"
                                Margin="0,5">

                            <Grid ColumnDefinitions="*, Auto, Auto"
                                  ColumnSpacing="10">

                                <!-- Nombre -->
                                <VerticalStackLayout Grid.Column="0">
                                    <Label Text="{Binding NombreCompleto}"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           TextColor="#1E293B"/>

                                    <Label Text="{Binding Username}"
                                           TextColor="#64748B"/>
                                </VerticalStackLayout>

                                <!-- Botón Editar -->
                                <Button Grid.Column="1"
                                        Text="Editar"
                                        BackgroundColor="#0284C7"
                                        TextColor="White"
                                        CornerRadius="8"
                                        HeightRequest="40"
                                        CommandParameter="{Binding .}"
                                        Clicked="Editar_Clicked"/>

                                <!-- Botón Eliminar -->
                                <Button Grid.Column="2"
                                        Text="Eliminar"
                                        BackgroundColor="#DC2626"
                                        TextColor="White"
                                        CornerRadius="8"
                                        HeightRequest="40"
                                        CommandParameter="{Binding .}"
                                        Clicked="Eliminar_Clicked"/>

                            </Grid>

                        </Border>

                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>


