<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FisioTurno.Views.RegisterPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">

            <!-- TITULO -->
            <Label Text="Crear Cuenta"
                   FontSize="34"
                   TextColor="#1E293B"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- TARJETA -->
            <Border StrokeShape="RoundRectangle 15"
                    BackgroundColor="#F8FAFC"
                    Padding="20"
                    StrokeThickness="0">

                <VerticalStackLayout Spacing="18">

                    <!-- Usuario -->
                    <Entry x:Name="txtUsername"
                           Placeholder="Usuario"
                           FontSize="16"
                           TextColor="#1E293B"
                           PlaceholderColor="#94A3B8"
                           BackgroundColor="White"
                           HeightRequest="45"/>

                    <!-- Contraseña -->
                    <Entry x:Name="txtPassword"
                           Placeholder="Contraseña"
                           IsPassword="True"
                           FontSize="16"
                           TextColor="#1E293B"
                           PlaceholderColor="#94A3B8"
                           BackgroundColor="White"
                           HeightRequest="45"/>

                    <!-- Confirmar contraseña -->
                    <Entry x:Name="txtConfirm"
                           Placeholder="Confirmar contraseña"
                           IsPassword="True"
                           FontSize="16"
                           TextColor="#1E293B"
                           PlaceholderColor="#94A3B8"
                           BackgroundColor="White"
                           HeightRequest="45"/>

                </VerticalStackLayout>

            </Border>

            <!-- BOTÓN REGISTRAR -->
            <Button Text="Registrar"
                    BackgroundColor="#0284C7"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    Clicked="Registrar_Clicked"/>

            <!-- VOLVER -->
            <Button Text="Volver"
                    BackgroundColor="#94A3B8"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="10"
                    Clicked="Volver_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>



