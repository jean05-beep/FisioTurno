<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Login"
             BackgroundColor="White"
             x:Class="FisioTurno.Views.LoginPage">

    <ScrollView>

        <VerticalStackLayout Padding="30" Spacing="20">

            <!-- ESPACIADO SUPERIOR -->
            <Label HeightRequest="40"/>

            <!-- LOGO CIRCULAR -->
            <Frame CornerRadius="60"
                   HeightRequest="120"
                   WidthRequest="120"
                   BackgroundColor="#E0F2FE"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">

                <Image Source="logo_fisio.png"
                       HeightRequest="60"
                       WidthRequest="60"
                       Aspect="AspectFit"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Frame>

            <!-- TÍTULO -->
            <Label Text="FisioTurno"
                   FontSize="36"
                   TextColor="#1E293B"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- TARJETA INPUTS -->
            <Frame BackgroundColor="#F8FAFC"
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="True">

                <VerticalStackLayout Spacing="15">

                    <!-- CAMPO USUARIO -->
                    <Grid ColumnDefinitions="40,*">
                        <Image Source="icon_user.png"
                               HeightRequest="20"
                               WidthRequest="20"
                               VerticalOptions="Center"/>
                        <Entry Grid.Column="1"
                               x:Name="txtUsuario"
                               Placeholder="Usuario"
                               PlaceholderColor="#9CA3AF"
                               TextColor="#1E293B"/>
                    </Grid>

                    <!-- CAMPO CONTRASEÑA -->
                    <Grid ColumnDefinitions="40,*">
                        <Image Source="icon_password.png"
                               HeightRequest="20"
                               WidthRequest="20"
                               VerticalOptions="Center"/>
                        <Entry Grid.Column="1"
                               x:Name="txtPassword"
                               Placeholder="Contraseña"
                               IsPassword="True"
                               PlaceholderColor="#9CA3AF"
                               TextColor="#1E293B"/>
                    </Grid>

                </VerticalStackLayout>

            </Frame>

            <!-- BOTÓN INGRESAR -->
            <Button Text="Ingresar"
                    Clicked="Ingresar_Clicked"
                    BackgroundColor="#0284C7"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="12"
                    FontAttributes="Bold"/>

            <!-- BOTÓN REGISTRARSE -->
            <Button Text="Crear cuenta"
                    Clicked="IrRegistro_Clicked"
                    BackgroundColor="#38BDF8"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="12"/>

            <!-- COPYRIGHT -->
            <Label Text="© Clínica FisioTurno"
                   FontSize="12"
                   TextColor="#6B7280"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10"/>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>





